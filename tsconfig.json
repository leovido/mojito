{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "verbatimModuleSyntax": true,
    "strict": true,
    "paths": {
      "@/*": [
        "./*"
      ],
      "@moxito/api": [
        "packages/api/*"
      ],
      "@moxito/feature": [
        "apps/feature/*"
      ],
      "@moxito/theme": [
        "packages/theme/*"
      ],
      "@moxito/shared-types": [
        "packages/shared-types/*"
      ]
    },
    "baseUrl": "."
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "**/*.js",
    ".eslintrc.js",
  ]
}